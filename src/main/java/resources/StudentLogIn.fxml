<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="UI.StudentLogInController"
          prefHeight="200.0" prefWidth="400.0" vgap="8" hgap="10">


    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label text="Enter First Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="firstName" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label text="Enter Last Name" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="lastName" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

    <Button fx:id = "Login" text="Log in" GridPane.rowIndex="8" GridPane.columnIndex="3" onAction="#LogInAsStudent"/>

</GridPane>
